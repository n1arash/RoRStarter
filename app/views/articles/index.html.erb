<h1>Listing Articles</h1>

<table class="table table-hover">
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>
	<% @articles.each do |article| %>
	<tr>
		<td><%= article.id %></td>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show', article_path(article),class: 'btn btn-success btn-sm'%></td>
		<td><%= link_to 'Edit', edit_article_path(article),class: 'btn btn-warning btn-sm'%></td>
		<td><%= link_to 'Destroy', article_path(article),method: :delete,data: {confirm: 'Are You Sure?'},class: 'btn btn-danger btn-sm' %></td>

	</tr>
	<% end %>
</table>
<%= link_to 'New Article', new_article_path ,class: 'btn btn-success btn-sm' %>